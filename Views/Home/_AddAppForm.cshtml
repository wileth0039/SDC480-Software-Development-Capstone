@model IsItConvergent.Models.ViewModels.LinuxApp_VM
@* Modal for adding new app *@

<!-- Modal -->
<div class="modal fade" id="addNewAppModal" tabindex="-1" aria-labelledby="addNewAppModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addNewAppModalLabel">Add New App</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("AddApp", "Home", FormMethod.Post))
                {
                  @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Name, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter app name" })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Version, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Version, new { @class = "form-control", placeholder = "Enter version" })
                        @Html.ValidationMessageFor(m => m.Version, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Description, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Description, new { @class = "form-control", placeholder = "Enter description" })
                        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(m => m.IconUrl, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.IconUrl, new { @class = "form-control", placeholder = "Enter icon URL" })
                        @Html.ValidationMessageFor(m => m.IconUrl, "", new { @class = "text-danger" })
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save App</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>